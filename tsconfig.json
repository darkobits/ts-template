{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src", "*.config.ts"],
  "exclude": ["dist/**", "node_modules"],
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strictNullChecks": true
  }
}
